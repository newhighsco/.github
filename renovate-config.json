{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "configMigration": true,
  "extends": [
    "config:recommended"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "addLabels": [
        "automerge"
      ],
      "automerge": true,
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest",
        "lockFileMaintenance",
        "bump"
      ],
      "platformAutomerge": true
    },
    {
      "description": "Group New High Score packages together",
      "groupName": "newhighsco packages",
      "groupSlug": "newhighsco",
      "matchPackageNames": [
        "/^@newhighsco/"
      ]
    },
    {
      "description": "Group Next.js packages and plugins together",
      "extends": [
        "monorepo:nextjs"
      ],
      "groupName": "nextjs packages",
      "groupSlug": "nextjs",
      "matchPackageNames": [
        "/^next/"
      ]
    },
    {
      "description": "Pin `eslint` to v8 as update requires flat config",
      "matchPackageNames": [
        "eslint"
      ],
      "allowedVersions": "<9"
    }
  ],
  "postUpdateOptions": [
    "yarnDedupeHighest"
  ],
  "prCreation": "not-pending",
  "reviewers": [
    "team:reviewers"
  ],
  "stopUpdatingLabel": "blocked"
}
