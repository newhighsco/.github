{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":assignAndReview(team:reviewers)",
    ":configMigration",
    ":maintainLockFilesWeekly"
  ],
  "onboardingConfigFileName": ".github/renovate.json",
  "packageRules": [
    {
      "addLabels": ["automerge"],
      "automerge": true,
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest",
        "lockFileMaintenance",
        "bump"
      ],
      "platformAutomerge": true
    },
    {
      "description": "Group New High Score packages together",
      "groupName": "newhighsco packages",
      "groupSlug": "newhighsco",
      "matchPackageNames": ["/^@newhighsco/"]
    },
    {
      "description": "Group Next.js packages and plugins together",
      "extends": ["monorepo:nextjs"],
      "groupName": "nextjs packages",
      "groupSlug": "nextjs",
      "matchPackageNames": ["/^next/"]
    },
    {
      "description": "Pin `storybook` to v9 as update requires ESM-only",
      "matchSourceUrls": ["https://github.com/storybookjs/storybook"],
      "allowedVersions": "<10"
    }
  ],
  "postUpdateOptions": ["yarnDedupeHighest"],
  "stopUpdatingLabel": "blocked"
}
